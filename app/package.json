{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "yarn generate:css --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "yarn generate:css --watch",
    "dev:node": "cross-env NODE_ENV=development nodemon --require dotenv/config ./server.ts --watch ./server.ts",
    "dev:remix": "remix watch",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "start": "cross-env NODE_ENV=production node ./build/server.js"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.13",
    "@lezer/highlight": "^1.1.2",
    "@lezer/python": "^1.1.1",
    "@netlify/functions": "^1.0.0",
    "@remix-run/netlify": "^1.7.3",
    "@remix-run/node": "^1.7.3",
    "@remix-run/react": "^1.7.3",
    "@tailwindcss/forms": "^0.5.3",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "hast-to-hyperscript": "^10.0.1",
    "jwt-decode": "^3.1.2",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.3",
    "@remix-run/eslint-config": "^1.7.3",
    "@remix-run/serve": "^1.7.3",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/validator": "^13.7.10",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.23.1",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.18",
    "typescript": "^4.7.4",
    "yarn-run-all": "^3.1.1"
  },
  "engines": {
    "node": ">=14"
  }
}
